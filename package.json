{
  "name": "shell-ts",
  "version": "0.0.1",
  "description": "Shell tools written in zsh and typescript (for personal use)",
  "main": "index.js",
  "repository": "git@github.com:belkamax05/shell-ts.git",
  "author": "Maksym Bondarchuk belkamax05@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.2.2",
  "scripts": {
    "build": "yarn build:sts",
    "build:sts": "esbuild libs/sts/src/index.ts --bundle --platform=node --outfile=dist/sts/index.js",
    "clear": "yarn clear:sts",
    "clear:sts": "rm -rf dist/sts",
    "sts": "node bin/sts.js",
    "sts-dev": "yarn run-script scripts/sts.ts",
    "--- utils ---": "",
    "run-script": "ts-node -P scripts/tsconfig.json -r tsconfig-paths/register"
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "esbuild": "^0.21.4",
    "minimist": "^1.2.8",
    "npkill": "^0.12.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0"
  }
}
